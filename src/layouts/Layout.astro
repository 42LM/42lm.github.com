---
import '@/styles/global.css';
---

<!doctype html>
<html id="theme" lang="en" data-webtui-theme="catppuccin">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>42LM</title>

    <!-- Icon(s) -->
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">

    <!-- OpenGraph / X Title -->
    <meta property="og:title" content="42LM" />
    <meta name="twitter:title" content="42LM" />

    <!-- OpenGraph / X Description -->
    <meta
      name="description"
      content="Personal website/portfolio of 42LM (https://github.com/42LM)"
    />
    <meta
      name="og:description"
      content="Personal website/portfolio of 42LM (https://github.com/42LM)"
    />
    <meta
      name="twitter:description"
      content="Personal website/portfolio of 42LM (https://github.com/42LM)"
    />

    <!-- OpenGraph / X Cover Image -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:image" content="https://raw.githubusercontent.com/42LM/42lm.github.com/refs/heads/main/images/cover.png" />
    <meta property="og:image" content="https://raw.githubusercontent.com/42LM/42lm.github.com/refs/heads/main/images/cover.png" />
    <meta property="og:image:type" content="image/png" />
    <meta property="og:image:width" content="1920" />
    <meta property="og:image:height" content="1200" />

    <!-- Misc Metadata -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://42lm.github.io/" />

    <meta
      name="keywords"
      content="terminal, css, ui, tui, library, web, open-source"
    />
    <meta name="theme-color" content="#1e1e2e" />
  </head>
  <body>
    <slot />
  </body>
</html>
