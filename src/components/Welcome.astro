<style>
  row {
    padding: 10px;
  }

  #header {
    padding: 10px 0;
    background: linear-gradient(
        90deg, 
        var(--red) 0%,
        var(--peach) 50%,
        var(--yellow) 100%
    );
    background-clip: text;
  }

  #welcome {
    padding-bottom: 25px;

    span {
      color: var(--background3);
    }
  }

  #copyright {
    font-size: 16px;
  }

  .selected {
    outline: 1px solid var(--sky);
    background: linear-gradient(
      90deg,
      rgba(114, 134, 253, 0.05) 0%,   /* #7286FD at 60% opacity */
      rgba(30, 102, 244, 0.05) 50%,   /* #1E66F4 at 60% opacity */
      rgba(4, 165, 228, 0.1) 100%    /* #04A5E4 at 60% opacity */
    );
  }

  @media (max-width: 630px) {
    #header {
      --font-size: 15px;
    }
    #quickstart {
      font-size: 18px;
    }
  }
  @media (max-width: 480px) {
    #header {
      --font-size: 10px;
    }
    #quickstart {
      font-size: 14px;
    }
  }
</style>
 
<script>
const welcome = document.getElementById('welcome');

welcome.addEventListener('click', (event) => {
  welcome.classList.toggle('selected');
  event.stopPropagation(); 
});

document.addEventListener('click', () => {
  welcome.classList.remove('selected');
});
</script>
